file = {::},
issn = {14320894},
journal = {Climate Dynamics},
keywords = {Intraseasonal variability,Precipitation indices,Regional climate modeling,Wes,West African monsoon,west africa},
month = {feb},
number = {9-10},
pages = {3113--3140},
publisher = {Springer Berlin Heidelberg},
title = {{West African monsoon intraseasonal activity and its daily precipitation indices in regional climate models: diagnostics and challenges}},
url = {http://link.springer.com/article/10.1007/s00382-016-3016-8},
volume = {47},
