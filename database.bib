@article{Belhabib2016,
abstract = {This paper reviews impacts and discusses potential adaptation strategies adopted by the artisanal and industrial fishing sectors. Both climate change and over-exploitation have altered species composition of catches. Climate change impacts on West African fisheries are projected to be mainly negative (although modelling outputs disagree over the direction of change in some regions). Warmer water species are increasing in dominance. Regardless of the differences in projected climate change effects, the ultimate impacts on local communities will depend on adaptive capacity, which is not well-studied. Both artisanal and industrial sectors may adapt by expanding the fishing ground, even though this increases operation costs. Historically, it is more common for industrial fisheries to change the target species than for artisanal fisheries, which challenges the prevailing assumption that artisanal fisheries would adapt by shifting target species and/or gear type. The preference of artisanal fisheries to “follow the fish” rather than change gear / species may be due to traditional diets and available markets. An increase in fishing costs may lead to a reduction in fishing effort, which while good for fisheries may mean loss of livelihoods, especially as in West Africa the opportunities for alternative livelihoods are limited. Methods: literature review of the impacts of climate change on two West African large marine ecosystems (economic performance, biologic productivity and diversity), the changes witnessed by industrial and artisanal fisheries in response to changing conditions, and the adaptation measures used by artisanal and industrial fisheries to similar changes (whether due to climate change or other stressors).},
author = {Belhabib, Dyhia and Lam, Vicky W.Y. and Cheung, William W.L.},
doi = {10.1016/j.marpol.2016.05.009},
issn = {0308597X},
journal = {Marine Policy},
keywords = {adaptation,coastal systems,fisheries,livelihood vulnerability,marine ecosystems,peer reviewed,review,robust,social vulnerability,west africa},
pages = {15--28},
title = {{Overview of West African fisheries under climate change: Impacts, vulnerabilities and adaptive responses of the artisanal and industrial sectors}},
volume = {71},
year = {2016}
}
